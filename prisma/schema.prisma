generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id     String  @unique
  name   String  @unique
  grammy Boolean
  Album  Album[]
}

model Album {
  id       String @unique
  artistId String @unique
  name     String @unique
  year     Int
  artist   Artist @relation(fields: [artistId], references: [id])
}

model User {
  id        String @unique
  login     String @unique
  password  String
  createdAt Int
  updatedAt Int
  version   Int
}

model Track {
  id       String @unique
  name     String @unique
  duration Int
  artistId String @unique
  albumId  String @unique
}
